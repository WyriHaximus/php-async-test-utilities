{
  "name": "wyrihaximus/async-test-utilities",
  "description": "Test utilities for api-clients packages",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4",
    "clue/block-react": "^1.3",
    "phpunit/phpunit": "^9.0",
    "react/event-loop": "^1.1",
    "react/promise": "^2.7",
    "wyrihaximus/coding-standard": "^1.0",
    "wyrihaximus/test-utilities": "^2.0"
  },
  "require-dev": {
    "wyrihaximus/iterator-or-array-to-array": "^1.1"
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "WyriHaximus\\AsyncTestUtilities\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WyriHaximus\\Tests\\AsyncTestUtilities\\": "tests/"
    },
    "files": [
      "tests/bootstrap.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "composer normalize"
    ],
    "post-update-cmd": [
      "composer normalize"
    ]
  }
}
